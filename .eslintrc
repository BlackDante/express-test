{
  plugins: [node],
  extends: [eslint:recommended, plugin:node/recommended],
  env: {
    es6: true,
    node: true,
    mocha: true,
  },
  rules: {
    "node/shebang": 0,
    "node/no-unpublished-require": 0,
    require-jsdoc: 2,
    prefer-arrow-callback: 2,
    prefer-const: 2,
    prefer-rest-params: 2,
    prefer-spread: 2,
    prefer-template: 2,
    no-var: 2,
    object-shorthand: 2,
    space-before-blocks: [2, { functions: always, keywords: always, classes: always }],
    space-in-parens: [2, never],
    max-len: [2, 80],
    max-depth: [2, 3],
    global-require: 2,
    no-mixed-requires: 2,
    no-new-require: 2,
    no-process-exit: 2,
    no-sync: 2,
    array-bracket-spacing: [2, never],
    camelcase: 2,
    eol-last: 2,
    indent: [error, 2],
    max-nested-callbacks: [2, 2],
    max-statements: [2, 15],
    newline-before-return: 2,
    quotes: [2, single],
    no-cond-assign: 2,
    no-console: 2,
    no-debugger: 2,
    no-dupe-args: 2,
    no-dupe-keys: 2,
    no-duplicate-case: 2,
    no-empty-character-class: 2,
    no-empty: 2,
    no-ex-assign: 2,
    no-inner-declarations: 2,
    no-func-assign: 2,
    no-invalid-regexp: 2,
    valid-jsdoc: 2,
    valid-typeof: 2,
    complexity: [2, 5],
    default-case: 2,
    eqeqeq: 2,
    no-caller: 2,
    no-eval: 2,
    no-loop-func: 2,
    no-magic-numbers: 2,
    yoda: 2,
    no-unused-vars: 2,
    no-use-before-define: 2,
    newline-per-chained-call: ["error", { "ignoreChainWithDepth": 2 }]
  }
}
